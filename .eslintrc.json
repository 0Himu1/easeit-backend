{
	"extends": ["prettier", "airbnb-base"],
	"parserOptions": {
		"ecmaVersion": 12
	},
	"env": {
		"commonjs": true,
		"node": true
	},
	"rules": {
		"no-console": 0,
		"indent": 0,
		"react/react-in-jsx-scope": 0,
		"linebreak-style": 0,
		"no-unused-vars": 1,
		"react/prop-types": 0,
		"jsx-a11y/control-has-associated-label": 0,
		"react/button-has-type": 0,
		"consistent-return": 0,
		"comma-dangle": 0,
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"singleQuote": true,
				"printWidth": 100,
				"tabWidth": 4,
				"semi": true
			}
		]
	},
	"plugins": ["prettier"]
}
